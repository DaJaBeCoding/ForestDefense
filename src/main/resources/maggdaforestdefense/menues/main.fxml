<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import maggdaforestdefense.menues.MainMenu?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<MainMenu xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="maggdaforestdefense.menues.MainMenu"
          prefHeight="400.0" prefWidth="600.0"
          alignment="CENTER" spacing="10">

    <Button fx:id="playBtn" id="playBt" text="Play" onAction="#playBtnOnClick"/>


    <HBox spacing="10" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER">
            <Text fx:id="userNameTxt" />
            <Text fx:id="emailTxt" />
        </VBox>
        <Button fx:id="settingsBtn" styleClass="y-btn-settings" minHeight="20" minWidth="20" onAction="#settingsBtnOnClick"/>
        <Button fx:id="logoutBtn" styleClass="y-btn-logout" minHeight="20" minWidth="20" onAction="#logoutBtnOnClick"/>
    </HBox>

</MainMenu>
