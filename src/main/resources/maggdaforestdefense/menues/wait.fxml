<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import maggdaforestdefense.menues.WaitForPlayersMenu?>
<WaitForPlayersMenu xmlns="http://javafx.com/javafx"
                xmlns:fx="http://javafx.com/fxml"
                fx:controller="maggdaforestdefense.menues.WaitForPlayersMenu"
                alignment="CENTER_LEFT" spacing="10">
    <padding>
        <Insets bottom="10" left="10" top="10" right="10" />
    </padding>

    <VBox spacing="10">
        <padding>
            <Insets bottom="10" left="10" top="10" right="10" />
        </padding>
        
        
        <Separator />

        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" top="10" right="10" />
            </padding>
            <Button fx:id="cancelBtn" text="cancel" onAction="#cancel"/>
            <Button fx:id="startBtn" text="start" onAction="#startGame"/>
        </HBox>

    </VBox>

</WaitForPlayersMenu>
